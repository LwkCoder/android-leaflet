<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--文本基础风格-->
    <style name="BaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!--微小文本风格-->
    <style name="TinyTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <!--小文本风格-->
    <style name="SmallTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!--中等文本风格-->
    <style name="MediumTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!--正常文本风格-->
    <style name="NormalTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!--大文本风格-->
    <style name="LargeTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!--超大文本风格-->
    <style name="HugeTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <!--微小文本按钮风格-->
    <style name="TinyButtonStyle" parent="TinyTextStyle">
        <item name="corner_radius">@dimen/spacing_tiny</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:gravity">center</item>
        <item name="ripple">true</item>
        <item name="ripple_color">@color/gray_lighter</item>
        <item name="text_color_normal">@color/text_black_normal</item>
        <item name="background_normal">@color/gray_darker</item>
    </style>

    <!--小文本按钮风格-->
    <style name="SmallButtonStyle" parent="SmallTextStyle">
        <item name="corner_radius">@dimen/spacing_tiny</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:gravity">center</item>
        <item name="ripple">true</item>
        <item name="ripple_color">@color/gray_lighter</item>
        <item name="text_color_normal">@color/text_black_normal</item>
        <item name="background_normal">@color/gray_darker</item>
    </style>

    <!--中等文本风格-->
    <style name="MediumButtonStyle" parent="MediumTextStyle">
        <item name="corner_radius">@dimen/spacing_tiny</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:gravity">center</item>
        <item name="ripple">true</item>
        <item name="ripple_color">@color/gray_lighter</item>
        <item name="text_color_normal">@color/text_black_normal</item>
        <item name="background_normal">@color/gray_darker</item>
    </style>

    <!--正常文本风格-->
    <style name="NormalButtonStyle" parent="NormalTextStyle">
        <item name="corner_radius">@dimen/spacing_tiny</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:gravity">center</item>
        <item name="ripple">true</item>
        <item name="ripple_color">@color/gray_lighter</item>
        <item name="text_color_normal">@color/text_black_normal</item>
        <item name="background_normal">@color/gray_darker</item>
    </style>

    <!--大文本风格-->
    <style name="LargeButtonStyle" parent="LargeTextStyle">
        <item name="corner_radius">@dimen/spacing_tiny</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:gravity">center</item>
        <item name="ripple">true</item>
        <item name="ripple_color">@color/gray_lighter</item>
        <item name="text_color_normal">@color/text_black_normal</item>
        <item name="background_normal">@color/gray_darker</item>
    </style>

    <!--超大文本风格-->
    <style name="HugeButtonStyle" parent="HugeTextStyle">
        <item name="corner_radius">@dimen/spacing_tiny</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:gravity">center</item>
        <item name="ripple">true</item>
        <item name="ripple_color">@color/gray_lighter</item>
        <item name="text_color_normal">@color/text_black_normal</item>
        <item name="background_normal">@color/gray_darker</item>
    </style>

    <!--水平线条-->
    <style name="VerticalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <!--垂直线条-->
    <style name="HorizontalLine">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--App风格基础-->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Activity基础风格-->
    <style name="BaseActivityStyle" parent="BaseAppTheme">
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <!--透明Activity风格-->
    <style name="TranslucentActivityStyle" parent="BaseActivityStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!--透明全屏Activity风格-->
    <style name="TranslucentFullScreenActivityStyle" parent="TranslucentActivityStyle">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--自定义dialog风格-->
    <style name="BaseDialogStyle" parent="@android:style/Theme.Dialog">
        <!--提示框边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否悬浮在界面上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--窗口背景色-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--显示区域以外黑色半透明程度，取值范围[0-1],值越大越不透明-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--显示动画-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>