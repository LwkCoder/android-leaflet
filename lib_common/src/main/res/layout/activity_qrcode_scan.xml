<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".qrcode.QRCodeScanActivity">

    <ViewStub
        android:id="@+id/vs_qrcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_zxingview" />

    <com.lwkandroid.lib.common.widgets.view.RImageView
        android:id="@+id/img_qrcode_scan_close"
        android:layout_width="38dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_huge"
        android:src="@drawable/ic_qrcode_scan_close" />

</FrameLayout>
